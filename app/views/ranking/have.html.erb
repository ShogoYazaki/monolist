<h1>Haveランキング</h1>
<div class="container"> 
 <table class="table table-striped table-bordered table-hover">
  
  <thead>
    <tr>
      <th>ランキング</th>
      <th>商品名</th>
      <th>カウント数</th>
    </tr>
  </thead>
 
  <tbody>
    <% @items.each_with_index do |item,i| %>
      <tr>
        <td><%=  i = i + 1 %></td>
        <td><%= item.title %></td>
        <td><%= item.haves.count %></td>
      </tr>
    <% end %>
  </tbody>
 </table>
</div>